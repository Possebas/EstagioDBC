		<mapping class="br.com.dbccompany.bancodigital.Entity.Bancos"></mapping>
		<mapping class="br.com.dbccompany.bancodigital.Entity.Correntistas"></mapping>
		<mapping class="br.com.dbccompany.bancodigital.Entity.Clientes"></mapping>
